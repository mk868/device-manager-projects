<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox maxWidth="200" styleClass="left-menu" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="mk.dm.app.client.controller.MenuController">
  <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" onAction="#onMainPageAction"
    text="MAIN PAGE">
    <graphic>
      <FontIcon iconLiteral="fas-clipboard-list" iconSize="36"/>
    </graphic>
    <VBox.margin>
      <Insets bottom="10.0"/>
    </VBox.margin>
  </Button>
  <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" onAction="#onSettingsAction"
    text="SETTINGS">
    <graphic>
      <FontIcon iconLiteral="fas-tools" iconSize="36"/>
    </graphic>
    <VBox.margin>
      <Insets bottom="10.0"/>
    </VBox.margin>
  </Button>
  <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" onAction="#onLogsAction"
    text="LOGS">
    <graphic>
      <FontIcon iconLiteral="fas-book-open" iconSize="36"/>
    </graphic>
    <VBox.margin>
      <Insets bottom="10.0"/>
    </VBox.margin>
  </Button>
</VBox>
