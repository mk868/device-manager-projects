<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<ScrollPane
  xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="mk.dm.app.client.controller.content.SettingsPageController"
  styleClass="content"
>
  <VBox>
    <Text styleClass="title">Settings</Text>

    <Label>Time on</Label>
    <Spinner fx:id="blinkTimeOnSpinner"/>
    <Label>Time off</Label>
    <Spinner fx:id="blinkTimeOffSpinner"/>

    <Button fx:id="saveButton" text="Save" onAction="#saveAction"/>
  </VBox>
</ScrollPane>
